<p id="notice"><%= notice %></p>

<h1>Listing Trials</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Claim</th>
      <th>Prosecutor</th>
      <th>Defender</th>
      <th>Ended at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trials.each do |trial| %>
      <tr>
        <td><%= trial.title %></td>
        <td><%= trial.claim %></td>
        <td><%= trial.prosecutor_id %></td>
        <td><%= trial.defender_id %></td>
        <td><%= trial.ended_at %></td>
        <td><%= link_to 'Show', trial %></td>
        <td><%= link_to 'Edit', edit_trial_path(trial) %></td>
        <td><%= link_to 'Destroy', trial, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

